@using Sudzinski.AudioCatalog.Interfaces
@model Sudzinski.AudioCatalog.WebApp.Models.EditSpeakerViewModel

<h2>Edit Speaker</h2>

<form method="post" asp-controller="Speakers" asp-action="Edit">
    @* Include hidden field for Id *@
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" required>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProducerId">Producer:</label>
        <select asp-for="ProducerId" asp-items="new SelectList(Model.AllProducers, nameof(IProducer.Id), nameof(IProducer.Name))" class="form-control"></select>
        <span asp-validation-for="ProducerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Power">Power:</label>
        <input asp-for="Power" class="form-control" type="number" step="0.01" required>
        <span asp-validation-for="Power" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Weight">Weight:</label>
        <input asp-for="Weight" class="form-control" type="number" step="0.01" required>
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Color">Color:</label>
        <select asp-for="Color" asp-items="new SelectList(Model.AllColors)" class="form-control"></select>
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Update Speaker</button>
</form>