@model Sudzinski.AudioCatalog.WebApp.Models.DeleteSpeakerViewModel

<h2>Confirm Deletion</h2>

<p>Are you sure you want to delete the speaker '@Model.Name'?</p>
<form method="post" asp-action="Delete" asp-route-id="@Model.Id">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Home" class="btn btn-secondary" id="cancelButton">Cancel</a>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#cancelButton').on('click', function () {
                var activeTab = 'speakers-tab';
                $('#' + activeTab).tab('show');
            });
        });
    </script>
}